# MedResearch AI Platform Configuration
# =====================================
# Copy this file to .env and fill in your actual API keys

# Application Settings
APP_NAME=MedResearch AI Platform
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=localhost
PORT=8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=medresearch

# DeepSeek API Configuration
# Get your API key from: https://platform.deepseek.com
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_API_URL=https://api.deepseek.com

# Jina AI Embeddings API
# Get your API key from: https://jina.ai
JINA_API_KEY=jina_your-jina-api-key-here
JINA_API_URL=https://api.jina.ai/v1

# PubMed API Configuration
# Get your API key from: https://www.ncbi.nlm.nih.gov/account/
PUBMED_API_KEY=your-pubmed-api-key-here
PUBMED_API_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
PUBMED_EMAIL=your-email@example.com

# Security Configuration
JWT_SECRET_KEY=your-secure-jwt-secret-key-minimum-32-characters
ENCRYPTION_KEY=your-base64-encoded-encryption-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Vector Database Settings (Optional)
QDRANT_URL=http://localhost:6333

# File Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIRECTORY=uploads

# Caroline Settings
CAROLINE_OUTPUT_DIR=presentations
CAROLINE_THEME=medical
CAROLINE_ENABLE_COLLABORATION=true

# OCR Settings
OCR_ENGINE=tesseract
OCR_LANGUAGES=en,el
OCR_MEDICAL_MODE=true

# Springer API Configuration
# Get your API keys from: https://dev.springernature.com
SPRINGER_OPEN_ACCESS_API_KEY=your-springer-open-access-key
SPRINGER_META_API_KEY=your-springer-meta-key
SPRINGER_API_URL=https://api.springernature.com

# Zenodo Publication Configuration
# Get your tokens from: https://zenodo.org/account/settings/applications/
ZENODO_URL=https://zenodo.org
ZENODO_TOKEN=your-zenodo-personal-access-token
COMMUNITY_SLUG=your-community-slug

# OAuth Application Credentials
ZENODO_OAUTH_CLIENT_ID=your-zenodo-oauth-client-id
ZENODO_OAUTH_CLIENT_SECRET=your-zenodo-oauth-client-secret
ZENODO_OAUTH_REDIRECT_URI=http://localhost:8000/oauth/zenodo/callback
ZENODO_OAUTH_TOKEN_URL=https://zenodo.org/oauth/token
ZENODO_OAUTH_AUTHORIZE_URL=https://zenodo.org/oauth/authorize

# Legacy Zenodo Configuration
ZENODO_API_URL=https://zenodo.org/api
ZENODO_ACCESS_TOKEN=your-zenodo-access-token
ZENODO_SANDBOX_URL=https://sandbox.zenodo.org/api
ZENODO_SANDBOX_TOKEN=

# Email Configuration
# Configure with your email provider credentials
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_USE_TLS=true
EMAIL_FROM_NAME=MedResearch AI Platform
EMAIL_FROM_ADDRESS=noreply@example.com

# Logging
LOG_LEVEL=INFO

# ORCID Integration
# Register your application at: https://orcid.org/developer-tools
ORCID_CLIENT_ID=your-orcid-client-id
ORCID_CLIENT_SECRET=your-orcid-client-secret
ORCID_ENVIRONMENT=production
ORCID_REDIRECT_URI=https://your-domain.com/auth/orcid/callback

# Mailgun Configuration
# Get your API key from: https://www.mailgun.com
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.mailgun.org

# SMTP2GO Configuration
# Get your API key from: https://www.smtp2go.com
SMTP2GO_API_KEY=your-smtp2go-api-key
SMTP2GO_BASE_URL=https://api.smtp2go.com/v3

# Cross-Encoder Reranking Configuration
ENABLE_CROSS_ENCODER_RERANK=true
RERANK_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_BATCH_SIZE=16
RERANK_MAX_CANDIDATES=80
RERANK_CANDIDATE_MULTIPLIER=2
RERANK_SCORE_WEIGHT=2.5
RERANK_DEVICE=
